{
  "compilerOptions": {
    "target": "ES2021",                        
    "module": "commonjs",                    
    "declaration": true,              
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "./dist",  
    "removeComments": false,              
    "isolatedModules": true,              
    "strict": true,                          
    "esModuleInterop": true,           
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
