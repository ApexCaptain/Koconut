{
  "compilerOptions": {
    "target": "ES2015",                        
    "module": "commonjs",                    
    "declaration": true,                  
    "emitDeclarationOnly": true,
    "outDir": "./dist",                      
    "removeComments": true,              
    "isolatedModules": true,              
    "strict": true,                          
    "esModuleInterop": true,           
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*"
  ]
}
